{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "diagnostics": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "lib": ["es6"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "build",
    "pretty": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "strict": true,
    "strictNullChecks": true,
    "target": "es2017",
    // https://docs.sentry.io/platforms/node/typescript/#dealing-with-tslib
    "noEmitHelpers": true,
    "importHelpers": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  },
  "include": ["src/**/*.ts", "src/controllers/utils/getTokenUSDPrice.spec.ts"],
  "exclude": ["**/*.spec.ts", "node_modules", "build", "tests"]
}
